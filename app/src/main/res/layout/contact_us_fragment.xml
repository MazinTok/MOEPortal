<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:id="@+id/tableLayout">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="الرياض - تقاطع شارع المعذر بشارع التخصصي"
                android:id="@+id/textView8"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textColor="#FF346266"
                android:enabled="true"
                android:focusable="true" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="الرمز البريدي: 11153"
                android:id="@+id/textView15"
                android:layout_weight="1"
                android:layout_alignParentTop="true"
                android:textColor="#FF346266"
                android:textAlignment="center"
                android:phoneNumber="false"
                android:linksClickable="false"
                android:enabled="true"
                android:clickable="true"
                android:autoLink="none"
                android:autoText="false"
                android:focusable="true"
                android:textIsSelectable="true"
                android:textSize="20sp"
                android:layout_alignWithParentIfMissing="false"
                android:elegantTextHeight="false" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="صندوق البريد: 225085 "
                android:id="@+id/textView4"
                android:layout_weight="1"
                android:layout_alignParentTop="true"
                android:textColor="#FF346266"
                android:textAlignment="center"
                android:phoneNumber="false"
                android:linksClickable="false"
                android:enabled="true"
                android:clickable="true"
                android:autoLink="none"
                android:autoText="false"
                android:focusable="true"
                android:textIsSelectable="true"
                android:textSize="20sp"
                android:layout_alignWithParentIfMissing="false"
                android:elegantTextHeight="false" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="الفاكس: 0114419004"
                android:id="@+id/textView10"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textIsSelectable="true"
                android:textColor="#FF346266"
                android:enabled="true"
                android:focusable="true"
                android:clickable="true"
                android:autoLink="phone" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="الهاتف: 0114415555"
                android:id="@+id/textView11"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textColor="#FF346266"
                android:enabled="true"
                android:focusable="true"
                android:clickable="true"
                android:autoLink="phone" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="contact@mohe.gov.sa"
                android:id="@+id/textView9"
                android:layout_weight="1"
                android:inputType="textEmailAddress"
                android:textIsSelectable="true"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textColor="#FF346266"
                android:enabled="true"
                android:focusable="true"
                android:clickable="true"
                android:autoLink="email"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="البريد الإلكتروني 1 :"
                android:id="@+id/textView12"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textColor="#FF346266" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="info@mohe.gov.sa"
                android:id="@+id/textView13"
                android:layout_weight="1"
                android:inputType="textEmailAddress"
                android:textSize="20sp"
                android:singleLine="false"
                android:textIsSelectable="true"
                android:textColor="#FF346266"
                android:enabled="true"
                android:focusable="true"
                android:clickable="true"
                android:autoLink="email"
                android:autoText="false"
                android:textAlignment="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="البريد الإلكتروني 2 :"
                android:id="@+id/textView14"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textColor="#FF346266" />
        </TableRow>

    </TableLayout>

