<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sa.gov.moe.he.moeportal.MainFragment">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewNews"
            android:layout_alignParentTop="true"

            android:layout_alignParentRight="true"
            android:src="@drawable/newsicon"
            android:layout_alignBottom="@+id/Newstxt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/news"
            android:id="@+id/Newstxt"
            android:layout_gravity="right|top"
            android:gravity="end|right"
            android:layout_alignParentRight="false"
            android:layout_alignParentTop="true"
            android:textColor="#ffb3a47e"
            android:textSize="30dp"
            android:layout_margin="10dp"
            android:layout_alignParentEnd="false"
            android:layout_toLeftOf="@+id/imageViewNews" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="333dp"
            android:id="@+id/listView"
            android:layout_gravity="left|center_vertical"
            android:layout_below="@+id/Newstxt"
            android:layout_above="@+id/gridLayout"
            android:fadeScrollbars="false"

            android:scrollbarThumbVertical="@drawable/custom_scroll_style"
            />

        <ProgressBar
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar2"
            android:layout_alignTop="@+id/Newstxt"
            android:layout_centerHorizontal="true" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_centerHorizontal="true"
            android:id="@+id/gridLayout"
            android:layout_above="@+id/textView2">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/FacebookBtn"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="center"
                android:background="@drawable/facebook"
                android:layout_margin="5dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TwitterBtn"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity="center"
                android:background="@drawable/twitter"
                android:layout_margin="5dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/YoutubeBtn"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_gravity="center"
                android:background="@drawable/youtube"
                android:layout_margin="5dp" />
        </GridLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="تطبيقات الوزارة على الجوال"
            android:id="@+id/textView2"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_gravity="center"
            android:layout_above="@+id/gridLayout1"
            android:layout_centerInParent="true" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_centerHorizontal="true"
            android:id="@+id/gridLayout1"
            android:layout_above="@+id/textView">


            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/SafeerStdBtn"
                android:layout_row="3"
                android:layout_column="0"
                android:background="@drawable/safeerstd"
                android:layout_margin="5dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/SafeerGradbtn"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_rowWeight="1"
                android:background="@drawable/safergrad"
                android:layout_margin="5dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rasedBtn"
                android:layout_row="3"
                android:layout_column="2"
                android:layout_rowWeight="1"
                android:layout_gravity="center"
                android:background="@drawable/marsad"
                android:layout_margin="5dp" />

        </GridLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="جميع الحقوق محفوظة لوزارة التعليم  © 2015 | المملكة العربية السعودية"
            android:id="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:textSize="10dp"
            android:layout_margin="5dp" />
    </RelativeLayout>



</RelativeLayout>
